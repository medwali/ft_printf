OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): objs
	ar urc $(NAME) $(OBJ)

objs: $(OBJ)

clean:
	/bin/rm -f $(OBJ)

fclean: clean
	/bin/rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re objs
